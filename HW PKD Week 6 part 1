function withdraw(name) {

    let result = [];
    for (let i = 0; i < array_length(students); i = i + 1) {
        if (students[i][0] !== name) {
            let position = array_length(result);
            result[position] = students[i];
        }
    }

    display(result);
} // edit freely, but do not rename


