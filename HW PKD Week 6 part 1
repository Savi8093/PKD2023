function test_success() {
    
    courses = [
        [
            "1DL201", 
            3, 
            [
                ["Arne", "19941208-1234"],
                ["Test", "19670702-1234"],
                ["Kent", "19891118-1234"]
            ], 
            []
        ],
        [
            "1MA004", 10, [], []],
        [
            "1MA010", 3, [], []]
    ];
    
    apply("Oliver", "19941208-1234", "1DL201");
}

function test_remove_success() {
   
   students = [
        ["Arne", "19941208-1234", "1DL201"],
        ["Test", "19670702-1234", "1MA004"],
        ["Kent", "19891118-1234", "1MA010"]
       ];
       
   withdraw("Arne");
}

